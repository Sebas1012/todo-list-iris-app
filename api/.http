@base_url  = http://localhost:3000/api/v1
# Cambiar estos datos!
@username  = sebas1012
@password  = sebas1230
# --------------------------
@token     = {{ tokenRequest.response.body.accessToken }}
@task_id   = 2
@title     = Generar tarea desde archivo http.
@tag       = Prueba Tecnica
@completed = true

###
# @name tokenRequest
POST {{ base_url }}/auth/generate_token
Content-Type: application/json

{
    "username": "{{ username }}",
    "password": "{{ password }}"
}

###
# @name createUser
POST {{ base_url }}/auth/register
Content-Type: application/json
Authorization: Bearer {{ token }}

{
    "username": "{{ username }}",
    "password": "{{ password }}"
}

###
# @name getTasks
GET {{ base_url }}/tasks
Authorization: Bearer {{ token }}


###
# @name getTaskById
GET {{ base_url }}/tasks/{{ task_id }}
Authorization: Bearer {{ token }}

###
# @name createTask
POST {{ base_url }}/tasks
Content-Type: application/json
Authorization: Bearer {{ token }}

{
    "title": "{{ title }}",
    "tag": "{{ tag }}",
    "completed": "{{ completed }}"
}

###
# @name updateTask
PUT {{ base_url }}/tasks/{{ task_id }}
Content-Type: application/json
Authorization: Bearer {{ token }}

{
    "title": "{{ title }}",
    "tag": "{{ tag }}",
    "completed": "{{ completed }}"
}

###
# @name deleteTask
DELETE {{ base_url }}/tasks/{{ task_id }}
Authorization: Bearer {{ token }}

###
# @name completeTask
PATCH {{ base_url }}/tasks/complete/{{ task_id }}
Content-Type: application/json
Authorization: Bearer {{ token }}

{
    "completed": "{{ completed }}"
}
