    "@types/pg": "^8.11.6",
    "@types/sequelize": "4.28.20",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-dist": "^3.30.5",
    "@types/swagger-ui-express": "^4.1.6",
